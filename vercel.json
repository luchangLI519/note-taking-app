{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "src/static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|json|html))",
      "dest": "/src/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/src/static/index.html"
    }
  ],
  "env": {
    "PYTHONPATH": "$PYTHONPATH:."
  }
}
